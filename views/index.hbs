{{> header}}
{{>navbar}}
<div class="container">
    <h1>pintores</h1>
    {{#if pintores }}
        <table class="table table-dark table-hover">
            <thead>
            <tr>
                <td>ID</td>
                <th>nombre</th>
                <th>nacionalidad</th>
                <th>corriente</th>
                <th>pintura</th>
            </tr>
            </thead>
            <tbody>
            {{#each pintores }}
                <tr>
                    <td>{{ _id }}</td>
                    <td>{{nombre}}</td>
                    <td>{{nacionalidad}}</td>
                    <td>{{corriente}}</td>
                    <td><img src="../images/{{pintura}}/></td>
                </tr>
            {{/ each }}
            </tbody>
        </table>
    {{ else }}
        <div>No se encontraron pintores</div>
    {{/if}}
</div>
{{> footer}}